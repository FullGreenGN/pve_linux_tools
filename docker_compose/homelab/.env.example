# ------ General ------
TZ=Europe/Paris
HOST_IP=192.168.1.153
PUID=1000
PGID=1000
DOCKER_DATA_DIR=/docker

# ------ PostgreSQL ------
POSTGRES_PASSWORD=changeme_postgres_password

# ------ MariaDB ------
MYSQL_ROOT_PASSWORD=changeme_mariadb_password

# ------ Docmost ------
DOCMOST_PORT=3005
DOCMOST_APP_SECRET=changeme_random_secret_string_here
DOCMOST_APP_URL=http://docmost.local:3005

# ------ Affine ------
AFFINE_PORT=3010
AFFINE_ADMIN_EMAIL=admin@example.com
AFFINE_ADMIN_PASSWORD=changeme_affine_password

# ------ N8N ------
N8N_HOST=n8n.local
N8N_PORT=5678
N8N_WEBHOOK_URL=http://n8n.local:5678/

# ------ Vikunja ------
VIKUNJA_PORT=3456

# ------ Mealie ------
MEALIE_PORT=9925
MEALIE_BASE_URL=http://mealie.local

# ------ InfluxDB ------
INFLUXDB_INIT_USERNAME=admin
INFLUXDB_INIT_PASSWORD=changeme_influxdb_password
INFLUXDB_INIT_ORG=homelab
INFLUXDB_INIT_BUCKET=default
